-->
<toolbox id="toolbox" style="display: none">
  <category name="Logik" id="conditionals">
     <block type="logical_compare"></block>
     <block type="cond_if"></block>
     <block type="my_true"></block>
     <block type="my_false"></block>
  </category>
  <category name ="Schleifen" id ="loops">
     <block type="conditional_while"></block>
     <block type="repeat"></block>
     <block type="do_while"></block>
  </category>
  <category name="Zeichen" id="string">
     <block type="my_text"></block>
     <block type="my_concat"></block>  
  </category>
   <category name="Mathematik" id="math">     
     <block type="math_operators"></block>
     <block type="my_number"></block>  
  </category>
  <category name="Werte" id="misc">
     <block type="my_null"></block>    
  </category>
  
  <category name = "Input/Output" id = "io">
     <block type="print"></block>
     <block type = "my_read"></block>
     <block type="conditional_yn"></block>
  </category>

  <category name = "Variablen" id = "variablen">
     <block type="use_vars"></block>
     <block type="set_var"></block>      
  </category>
  <category name = "Funktionen" id ="funcs">
      <block type = 'function'></block>
      <block type = "use_func"></block>
  </category>
  <category name = "Arrays" id ="arr">
      <block type = 'my_array'></block>
      <block type = "array_setLength"></block>
      <block type = "array_getLength"></block>
      <block type = "my_non_negative"></block>
  </category>
</toolbox>
